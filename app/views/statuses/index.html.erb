<!--used to edit main statuses page that comes up-->
<div class="page-header">
	<h1>All of the Statuses</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn"%>

<!--loop over all statuses, showing name and content and edit options for each status object there is-->
<% @statuses.each do |status| %>
	<div class="status hover">
		<strong><%= status.name  %></strong>
		<p><%= status.content %></p>
		<div class="meta">
			<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
			<!--below line used so we can show edit and destroy only to certain people-->
			<span class="admin">
				<!--pipe "|" seperates them-->
				| <%= link_to "Edit", edit_status_path(status) %> |
				<%= link_to "Delete", status, method: :delete, data: { confirm: " Are you sure you want to delete this status?"}%>
			</span>	
		</div>
	</div>
<% end %>


