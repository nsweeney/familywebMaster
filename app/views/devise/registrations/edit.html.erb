<div class="row">
<div class="span4">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "well", :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <fieldset>
		<legend>Edit <%= resource_name.to_s.humanize %></legend>

  <div><%= f.input :email %><br />
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.input :password %> <i>(leave blank if you don't want to change it)</i><br />
  </div>

  <div><%= f.input :password_confirmation %><br />
  </div>

  <div><%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  </div>

  <div><%= f.button :submit, "Update" %></div>
  </fieldset>
<% end %>
<div class="span8">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
</div>
<%= link_to "Back", :back %>
</div>
</div>
